{
  "info": {
    "name": "Posts API",
    "_postman_id": "posts-api-collection",
    "description": "Collection for testing the Posts API (uses {{baseUrl}} and {{token}} environment variables).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Posts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/posts",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Response is an array', function () { var json = pm.response.json(); pm.expect(json).to.be.an('array'); });"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "Create Post",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"New Post from Postman\",\n  \"content\": \"This is a test post created from Postman.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/posts",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 201 or 200', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
              "pm.test('Body contains id', function () { var json = pm.response.json(); pm.expect(json).to.be.an('object'); pm.expect(json._id || json.id).to.exist; pm.environment.set('createdId', json._id || json.id); });"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "Get Post by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/posts/{{createdId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts",
            "{{createdId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Response has matching id', function () { var json = pm.response.json(); pm.expect(json._id || json.id).to.eql(pm.environment.get('createdId')); });"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "Update Post",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated title from Postman\",\n  \"content\": \"Updated content.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/posts/{{createdId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts",
            "{{createdId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200 or 204', function () { pm.expect(pm.response.code).to.be.oneOf([200,204]); });"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "Delete Post",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/posts/{{createdId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "posts",
            "{{createdId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200/204/202', function () { pm.expect(pm.response.code).to.be.oneOf([200,202,204]); });"
            ]
          }
        }
      ],
      "response": []
    }
  ]
}
